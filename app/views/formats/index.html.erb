<head>
  <meta charset="UTF-8">
  <title>Index</title>
</head>

<h1>Formats</h1>

<% if @formats.empty? -%>
  There are no formats yet. Start creating some by pressing "Create Format".
<% else -%>
<table id="myTable">
  <tr>
    <th>Title</th>
    <th>Multiline</th>
  </tr>

  <% @formats.each do |format| %>
    <tr>
      <td><%= format.title %></td>
      <td><%= format.multiline %></td>
      <td><%= link_to 'Variables', :controller => "variables", :action => "show", :params => {:format_id => format.id} %></td>
      <td><%= link_to 'Edit', edit_format_path(format) %></td>
      <td><%= link_to 'Delete', format_path(format),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<% end %>

<footer>
  <%= link_to 'Create Format', "formats/new" %>
</footer>
