<div class="container">
  <!--<p id="notice"><%#= notice %></p>-->
  <h1>Uploads</h1>

  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Format ID</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @uploads.sort_by(&:format_id).each do |upload| %>
      <tr>
        <td><%= upload.attachment.file.filename %></td>
        <td><%= upload.format_id %></td>
        <td><%= link_to 'Show', upload %></td>
        <td><%= link_to 'Edit', 'uploads/'+upload.format_id.to_s+'/edit' %></td>
        <td><%= link_to 'Delete', upload, method: :delete, data: { confirm: 'Are you sure?' } if signed_in? %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>
</div>