<% if @upload_name.nil? -%>
  <%= simple_form_for @upload, html: { multipart: true }  do |f| %>
    <% if @upload.errors.any? -%>
      <%= f.error_notification %>
      <% @upload.errors.full_messages.each do |msg| %>
        <%= msg if @upload.errors.full_messages.first == msg %> <br />
      <% end %>
    <% end %>

    <%= f.file_field :attachment %>
    <%= hidden_field_tag :format_id, @format_id %>

    <%= f.submit 'Upload' %>
  <%end%>
<% else %>
  File already uploaded: <%= @upload_name %>
  <%= link_to 'Delete', @upload, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>