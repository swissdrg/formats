<%# if @upload_name.nil? -%>
  <%= simple_form_for @upload, url: new_upload_url, action: :post, html: { multipart: true } do |nested_form| %>
    <% if @upload.errors.any? -%>
      <%= nested_form.error_notification %>
      <% @upload.errors.full_messages.each do |msg| %>
        <%= msg if @upload.errors.full_messages.first == msg %> <br />
      <% end %>
    <% end %>

    <%= nested_form.file_field :attachment %>
    <%= hidden_field_tag :format_id, @format_id %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <%= nested_form.submit 'Upload' %>
  <%end%>
<% else %>
  File already uploaded: <%= @upload_name %>
  <%= link_to 'Delete', @upload, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>