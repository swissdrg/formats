<div id="clearance" class="password-reset container wrapper">

  <h2><%= t(".title") %></h2>

  <p><%= t(".description") %></p>

  <%= simple_form_for :password, url: passwords_path do |form| %>
    <div class="form-group">
      <%= form.text_field :email, type: 'email', placeholder: "Email", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit class: "btn btn-dark btn-block" %>
    </div>
  <% end %>
</div>
